{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "build",
         "command": "dotnet",
         "type": "process",
         "args": [
            "build",
            "${workspaceFolder}/HttpServer/MusiclabApi.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary;ForceNoAlign"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "label": "publish",
         "command": "dotnet",
         "type": "process",
         "args": [
            "publish",
            "${workspaceFolder}/HttpServer/MusiclabApi.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary;ForceNoAlign"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "label": "watch",
         "command": "dotnet",
         "type": "process",
         "args": [
            "watch",
            "run",
            "--project",
            "${workspaceFolder}/HttpServer/MusiclabApi.csproj"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "type": "docker-build",
         "label": "docker-build: debug",
         "dependsOn": [
            "build"
         ],
         "dockerBuild": {
            "tag": "musiclabapi:dev",
            "dockerfile": "${workspaceFolder}/HttpServer/Dockerfile",
            "context": "${workspaceFolder}",
            "pull": true
         },
         "netCore": {
            "appProject": "${workspaceFolder}/HttpServer/MusiclabApi.csproj"
         }
      },
      {
         "type": "docker-build",
         "label": "docker-build: release",
         "dependsOn": [
            "publish"
         ],
         "dockerBuild": {
            "tag": "musiclabapi:latest",
            "dockerfile": "${workspaceFolder}/HttpServer/Dockerfile",
            "context": "${workspaceFolder}",
            "pull": true
         },
         "netCore": {
            "appProject": "${workspaceFolder}/HttpServer/MusiclabApi.csproj"
         }
      },
      {
         "type": "docker-run",
         "label": "docker-run: debug",
         "dependsOn": [
            "docker-build: debug"
         ],
         "dockerRun": {
            "volumes": [
               {
                  "localPath": "${workspaceFolder}/data",
                  "containerPath": "/data",
                  "permissions": "rw"
               }
            ],
            "runOptions": [
               "--user",
               "root"
            ]
         },
         "netCore": {
            "appProject": "${workspaceFolder}/HttpServer/MusiclabApi.csproj",
            "enableDebugging": true
         }
      },
      {
         "type": "docker-run",
         "label": "docker-run: release",
         "dependsOn": [
            "docker-build: release"
         ],
         "dockerRun": {
            "volumes": [
               {
                  "localPath": "${workspaceFolder}/data",
                  "containerPath": "/data",
                  "permissions": "rw"
               }
            ],
            "runOptions": [
               "--user",
               "root"
            ]
         },
         "netCore": {
            "appProject": "${workspaceFolder}/HttpServer/MusiclabApi.csproj"
         }
      }
   ]
}